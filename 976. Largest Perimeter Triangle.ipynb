   "source": [
    "def largestPerimeter(nums):\n",
    "        nums.sort()\n",
    "        for x in range(len(nums)-1,1,-1):\n",
    "            if (nums[x-1]+nums[x-2]>nums[x]):\n",
    "                return (nums[x-1]+nums[x-2]+nums[x])\n",
    "        return 0\n",
    "    \n",
    "\n",
    "        "
   ]
